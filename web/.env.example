# Database path (Railway: use volume mount path)
DB_PATH=./data/claworld.db

# Port (Railway sets this automatically)
PORT=3000

# Frontend API URL (empty = same-origin, set when splitting frontend/backend)
NEXT_PUBLIC_API_URL=

# WebSocket URL (future use with Colyseus)
NEXT_PUBLIC_WS_URL=

# Node environment
NODE_ENV=production
